<Page x:Class="AlbumAdmin.mainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AlbumAdmin"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="mainPage">

    <Grid Background="White"  >
        <Button x:Name="showAllAlbumsButton" Content="Show All Albums" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" Height="50" Margin="306,91,294,309" FontWeight="Bold" Click="showAllAlbumsButton_Click"/>
        <Button x:Name="selectAlbumButton" Content="Select Album" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" Height="50" Margin="306,183,294,217" FontWeight="Bold" Click="selectAlbumButton_Click" />
        <Button x:Name="updateAlbumButton" Content="Update Album" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" Height="50" Margin="306,286,294,114" FontWeight="Bold" Click="updateAlbumButton_Click" />
    </Grid>
</Page>
